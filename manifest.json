{
    "name": "ять fix",
    "description": "Converts text typed in the wrong keyboard layout. It works in input, textarea, and most custom fields. You can convert selected or full text. Includes automatic correction with context menu controls and per-site exclusions.",
    "version": "1.5",
    "manifest_version": 3,

    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "permissions": [
        "storage",
        "tabs",
        "commands",
        "contextMenus"
    ],
    
    "background": {
        "service_worker": "background.js"
    },

    "commands": {
        "run-content-script": {
            "suggested_key": {
                "default": "Ctrl+Shift+X",
                "mac": "Command+Shift+X"
            },
            "description": "Run content script"
        }
    },
    
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
    }]
    
}